    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug outputfile",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // debug node
            "program": "${workspaceFolder}/outputfile.cjs",
            "args": [
                "--ts",
                "--kk"
            ],
            "stopOnEntry": true,
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}